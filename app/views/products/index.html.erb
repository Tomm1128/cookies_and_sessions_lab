<h1>Your Shopping Cart</h1>

<%= form_tag products_add_path, method: :post do %>
  <%= label_tag :product, "Product Name:" %>
  <%= text_field_tag :product %>
  <%= submit_tag "add to cart" %>
<% end %>

<h2>Items in your cart:</h2>
<ul>
  <% cart.each do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>
